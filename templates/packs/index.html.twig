{% extends 'base.html.twig' %}

{% block title %}Packs{% endblock %}


{% block connexion %}
  {% if statusConnexion == true %}
		<a href="{{ path('connexion') }}" class="grid grid-cols-1 gap-0 w-auto mr-5 h-[100%] min-w-[60px]">
			<i class="fa fa-user-circle relative mx-auto text-3xl text-blue-700 mt-[10px]" aria-hidden="true"></i>
			<p class="mx-auto">Connexion</p>
		</a>
  {% else %}
    <a href="{{ path('connexion') }}" class="grid grid-cols-1 gap-0 w-auto mr-5 h-[100%] min-w-[60px]">
			<i class="fa fa-user-circle relative mx-auto text-3xl text-blue-700 mt-[10px]" aria-hidden="true"></i>
			<p class="mx-auto">Compte</p>
		</a>
  {% endif %}
{% endblock %}

{% block menu %}<script>var menuArray = JSON.parse({{menuJs|json_encode()|raw}})</script>{% endblock %}

{% block body %}
    <main>
        <h1 class="title mt-[80px] mb-10 mx-[20px]">Nos packs</h1>
		<div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">
			{% for pack in packs %}
				<a href="{{ path('article', {'id': pack.id }) }}">
					<div class="w-full max-w-sm mx-auto shadow-md overflow-hidden">
						<div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url({{pack.Idpack.image}})">
							<button class="p-2 rounded-full bg-blue-600 text-white mx-5 -mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
								<svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewbox="0 0 24 24" stroke="currentColor">
									<path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
								</svg>
							</button>
						</div>
						<div class="px-5 py-3">
							<h3 class="text-gray-700 uppercase">{{pack.Idpack.nom}}</h3>
							<span class="text-gray-500 mt-2">Location:
								{{pack.Idpack.prix|number_format(2)}}
								â‚¬</span><br>
						</div>
					</div>
				</a>
			{% endfor %}
		</div>
    </main>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('nav') }}
{% endblock %}
