{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block connexion %}
  {% if statusConnexion == true %}
		<a href="{{ path('connexion') }}" class="grid grid-cols-1 gap-0 w-auto mr-5 h-[100%] min-w-[60px]">
			<i class="fa fa-user-circle relative mx-auto text-3xl text-blue-700 mt-[10px]" aria-hidden="true"></i>
			<p class="mx-auto">Connexion</p>
		</a>
  {% else %}
    <a href="{{ path('connexion') }}" class="grid grid-cols-1 gap-0 w-auto mr-5 h-[100%] min-w-[60px]">
			<i class="fa fa-user-circle relative mx-auto text-3xl text-blue-700 mt-[10px]" aria-hidden="true"></i>
			<p class="mx-auto">Compte</p>
		</a>
  {% endif %}
{% endblock %}

{% block menu %}<script>var menuArray = JSON.parse({{menuJs|json_encode()|raw}})</script>{% endblock %}

{% block body %}
<main>
        <h1 class="title mt-[80px] mb-10">Contact</h1>
        <p class="text-left mx-[20px]"><a href="{{ path('app_home') }}">Accueil</a> > <a href="{{ path('contact') }}">Contact</a></p>
		<!-- Container -->
		<div class="container mx-auto drop-shadow-2xl">
			<div class="flex justify-center px-6 my-12">
				<!-- Row -->
				<div class="w-full xl:w-3/4 lg:w-11/12 flex">
					<!-- Col -->
					<div
						class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
						style="background-image: url('./images/concert-819149_1920-min.jpg')"
					></div>
					<!-- Col -->
					<div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                    <h3 class="pt-4 text-2xl text-center">Contacter</h3>
						<form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" method="POST" action="{{ path('contact') }}" id="formulaire">
							<div class="mb-4">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="email">
									Email
								</label>
								<input
									class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
									id="email"
									type="email"
                                    name="email"
									placeholder="Email"
								/>
							</div>
                            <div class="mb-4">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="tel">
									Téléphone
								</label>
								<input
									class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
									 id="tel" name="tel" type="tel" pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$" placeholder="******************"
								/>
							</div>
							<div class="mb-4 md:flex md:justify-between">
								<div class="mb-4 md:mr-2 md:mb-0">
									<label class="block mb-2 text-sm font-bold text-gray-700" for="subject">
										Sujet
									</label>
									<input
										class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
										id="subject"
										type="text"
										name="sujet"
										placeholder="Sujet de la demande"
									/>
								</div>
							</div>
                            <div class="mb-4">
								<label class="block mb-2 text-sm font-bold text-gray-700" for="message">
									Message
								</label>
								<textarea class="w-full h-[200px] min-h-[200px] max-h-[200px] px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id ="message" name="message"></textarea>
							</div>
                            <div class="mb-6 text-center">
								<button
									class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
									type="button" name="envoie" id="envoie"
								>
									Envoyer
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
</main>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('nav') }}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}